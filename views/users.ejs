<link rel="stylesheet" href="/css/github-markdown.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<head>
    <title><%= title %></title>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <a class="navbar-brand" href="http://localhost:8000/">Home</a>
            <a class="navbar-brand" href="http://localhost:8000/add">Add Contact</a>
        </div>
    </nav>
</head>
<body class="markdown-body">
<div class="markdown-body">
    <h1><%= title %></h1>
    <div>
        <ul>
            <% for (var user in users) { %>
                <% var surname = users[user].name.last; %>
                <% var firstName = users[user].name.first; %>
                <% var id = users[user]._id %>
                <a href="http://localhost:8000/users/<%= id %>">
                    <img src ="<%= users[user].picture.thumbnail%>" alt="User Profile Thumbnail">
                <%= " " + surname.replace(surname.charAt(0), surname.charAt(0).toUpperCase())
                    + ", " +  firstName.replace(firstName.charAt(0), firstName.charAt(0).toUpperCase())%>
                </a>
                <br>
            <% } %>
        </ul>
    </div>
</div>
</body>